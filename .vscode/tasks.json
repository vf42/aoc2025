{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C file",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-std=c23",
                "-g",
                "-Wall",
                "-Wextra",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out"
            ],
            "group": "build",
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Build C++ file (C++23)",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++23",
                "-g",
                "-Wall",
                "-Wextra",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}